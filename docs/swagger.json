{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/notify": {
            "post": {
                "description": "Создает новое уведомление (Email, Telegram) и сохраняет его в БД и Redis",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "notifications"
                ],
                "summary": "Create Notification",
                "parameters": [
                    {
                        "description": "Notification to create",
                        "name": "notification",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/app.NotificationRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created notification",
                        "schema": {
                            "$ref": "#/definitions/app.Notification"
                        }
                    },
                    "400": {
                        "description": "Invalid input data",
                        "schema": {
                            "$ref": "#/definitions/web.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/web.ErrorResponse"
                        }
                    },
                    "503": {
                        "description": "Service unavailable (DB or cache)",
                        "schema": {
                            "$ref": "#/definitions/web.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/notify/{id}": {
            "get": {
                "description": "Получает уведомление по ID (из кэша или базы данных)",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "notifications"
                ],
                "summary": "Get Notification",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Notification ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Notification object",
                        "schema": {
                            "$ref": "#/definitions/app.Notification"
                        }
                    },
                    "400": {
                        "description": "Invalid notification ID",
                        "schema": {
                            "$ref": "#/definitions/web.ErrorResponse"
                        }
                    },
                    "404": {
                        "description": "Notification not found",
                        "schema": {
                            "$ref": "#/definitions/web.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/web.ErrorResponse"
                        }
                    },
                    "503": {
                        "description": "Service unavailable",
                        "schema": {
                            "$ref": "#/definitions/web.ErrorResponse"
                        }
                    }
                }
            },
            "delete": {
                "description": "Удаляет уведомление по ID из кэша и базы данных",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "notifications"
                ],
                "summary": "Delete Notification",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Notification ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Notification deleted successfully",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Invalid notification ID",
                        "schema": {
                            "$ref": "#/definitions/web.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/web.ErrorResponse"
                        }
                    },
                    "503": {
                        "description": "Service unavailable",
                        "schema": {
                            "$ref": "#/definitions/web.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "app.ChannelType": {
            "type": "string",
            "enum": [
                "email",
                "telegram"
            ],
            "x-enum-varnames": [
                "Email",
                "Telegram"
            ]
        },
        "app.Notification": {
            "type": "object",
            "properties": {
                "channel": {
                    "$ref": "#/definitions/app.ChannelType"
                },
                "created_at": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                },
                "recipient": {
                    "type": "string"
                },
                "send_at": {
                    "type": "string"
                },
                "status": {
                    "description": "pending, sent, failed, canceled",
                    "allOf": [
                        {
                            "$ref": "#/definitions/app.StatusType"
                        }
                    ]
                },
                "updated_at": {
                    "type": "string"
                }
            }
        },
        "app.NotificationRequest": {
            "type": "object",
            "required": [
                "channel",
                "message",
                "recipient",
                "send_at"
            ],
            "properties": {
                "channel": {
                    "type": "string",
                    "enum": [
                        "email",
                        "telegram"
                    ]
                },
                "message": {
                    "type": "string"
                },
                "recipient": {
                    "type": "string"
                },
                "send_at": {
                    "type": "string"
                }
            }
        },
        "app.StatusType": {
            "type": "string",
            "enum": [
                "pending",
                "sent",
                "failed",
                "canceled"
            ],
            "x-enum-varnames": [
                "Pending",
                "Sent",
                "Failed",
                "Canceled"
            ]
        },
        "web.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "invalid input data"
                }
            }
        }
    }
}